<div id="student-container">
    <div id="student-title" class="mt-3">
        <h1>
            Students
        </h1>
    </div>

    <div id="student-form" class=" my-3 ">
        <form action="/students/create-student" method="POST" class="form-group card mt-3 mb-3">
            <input type="text" name="name" id="student-name" class="form-control mt-2" placeholder="Name" required>
            <input type="email" name="email" id="student-email" class="form-control mt-2" placeholder="Email" required>
            <input type="text" name="college" id="student-college" class="form-control mt-2" placeholder="College Name"
                required>

            <select name="batch" id="select-batch" class="mt-2">
                <option value="" disabled selected>Select Batch</option>
                <option value="Career Camp">Career Camp</option>
                <option value="React">React</option>
                <option value="Node">Node</option>
                <option value="java">Java</option>
            </select>

            <select name="status" id="select-status " class="mt-2">
                <option value="" disabled selected>Select Status</option>
                <option value="Placed"> Placed </option>
                <option value="Not_Placed"> Not Placed</option>
            </select>

            <input type="text" name="dsa" placeholder="Data SA Score" class="form-control mt-2">
            <input type="text" name="webd" placeholder="Web Dev Score" class="form-control mt-2">
            <input type="text" name="react" placeholder="Reactjs Score" class="form-control mt-2">
            <input type="submit" value="Add Student" class="btn btn-outline-success mt-2">
        </form>
    </div>

    <div id="students-list-container ">
        <table id="student-table" class="table table-info ">
            <thead class="thead-light">
                <tr>
                    <th rowspan="2">Student_ID</th>
                    <th rowspan="2">Name</th>
                    <th rowspan="2">Email</th>
                    <th rowspan="2">Batch</th>
                    <th rowspan="2">College</th>
                    <th rowspan="2">Status</th>
                    <th colspan="3" style="text-align: center;">Scores</th>
                </tr>
                <tr>
                    <th>DSA</th>
                    <th>WEBD</th>
                    <th>REACT</th>
                </tr>
            </thead>
            <tbody class="table-hover">
                <%for(s of students){%>
                    <tr>
                        <td>
                            <%=s._id%>
                        </td>
                        <td>
                            <%=s.name%>
                        </td>
                        <td>
                            <%=s.email%>
                        </td>
                        <td>
                            <%=s.batch%>
                        </td>
                        <td>
                            <%=s.college%>
                        </td>
                        <td>
                            <%=s.status%>
                        </td>
                        <td>
                            <%=s.score.dsa%>
                        </td>
                        <td>
                            <%=s.score.webd%>
                        </td>
                        <td>
                            <%=s.score.react%>
                        </td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
</div>