<div id="interview-container">
    <div id="interview-title" class="mt-3">
        <h1>Placement Cell | Interviews </h1>
    </div>

    <div id="interview-form" class=" mt-5">
        <form action="/interviews/create-interview" method="POST" class="form-group card">
            <input type="text" name="company" class="form-control mb-2" placeholder="Company Name" required>
            <input type="text" name="profile" class="form-control mb-2" placeholder="Profile" required>
            <input type="submit" value="Add Company & Schedule" class="btn btn-outline-success">
        </form>
    </div>

    <div id="interview-list-container">
        <table id="list" class="table table-info">
            <thead class="thead-light">
                <tr>
                    <th>Company_ID</th>
                    <th>Company</th>
                    <th>Profile</th>
                    <th>Schedule Interview</th>
                </tr>
            </thead>
            <tbody class="table-hover">
                <% for(i of interview){%>
                    <tr>
                        <td>
                            <%=i._id%>
                        </td>
                        <td>
                            <%=i.company%>
                        </td>
                        <td>
                            <%=i.profile%>
                        </td>
                        <td style="width: 25%;"><a href="/scheduling/schedule-interview/<%=i._id%>">Schedule students
                                for <%=i.company%>/<%=i.profile%></a></td>
                    </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
</div>